<% include partials/header %>

<h1><%= project.name %></h1>


<p><%= project.description %></p>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Create a new Location</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/config/<%= project._id %>" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="location[name]" placeholder="Name of Location">
				</div>
				<div class="form-group">
					<button class="btn btn-lrg btn-primary btn-block">Add location</button>
				</div>
			</form>		
			<a href="/">Go Back</a>
		</div>

	</div>
</div>
<% project.locations.forEach(function(location){ %>
    <p>
        <strong><%= location.name%></strong>
    </p>
<% }) %>

<% include partials/footer %>